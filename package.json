{
  "name": "radar-sdk-js",
  "description": "Web JavaScript SDK for Radar, the location platform for mobile apps",
  "homepage": "https://radar.io",
  "license": "Apache-2.0",
  "version": "1.0.0-beta4",
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist src",
    "build:umd": "webpack --config webpack.config.js --output-filename radar.js",
    "build:umd.min": "webpack -p --config webpack.config.js --output-filename radar.min.js",
    "test": "mocha test/*.test.js --require @babel/register",
    "test:watch": "npm run test -- -w",
    "demo": "npm run build && node demo/server.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "bugs": {
    "url": "https://github.com/radarlabs/radar-sdk-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/radarlabs/radar-sdk-js.git"
  }
}
